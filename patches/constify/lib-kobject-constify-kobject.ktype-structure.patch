index ce89f757e6da..e814a1302a9c 100644
--- a/kernel/params.c
+++ b/kernel/params.c
@@ -912,7 +912,7 @@ static const struct sysfs_ops module_sysfs_ops = {
 
 static int uevent_filter(struct kset *kset, struct kobject *kobj)
 {
-	struct kobj_type *ktype = get_ktype(kobj);
